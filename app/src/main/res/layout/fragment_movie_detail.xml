<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 xmlns:tools="http://schemas.android.com/tools"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 tools:context="com.edwin.android.cinerd.moviedetail.MovieDetailFragment">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar_movie_detail"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/image_movie_backdrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                app:layout_collapseMode="parallax"/>

            <ImageView
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:src="@drawable/ic_play_circle_filled"/>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_detail_movie"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"/>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp">

            <TextView
                android:id="@+id/text_movie_name"
                style="@style/TextAppearance.AppCompat.Headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Wonder Woman"/>

            <TextView
                android:id="@+id/text_movie_genre_duration"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@+id/text_movie_name"
                app:layout_constraintTop_toBottomOf="@+id/text_movie_name"
                tools:text="Comedy, Action | 91 min"/>

            <TextView
                android:id="@+id/text_movie_release_date"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@+id/text_movie_genre_duration"
                app:layout_constraintTop_toBottomOf="@+id/text_movie_genre_duration"
                tools:text="20 July 2015"/>

            <ImageView
                android:id="@+id/text_imdb_label"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginStart="70dp"
                android:background="@drawable/icons8_imdb_96"
                app:layout_constraintBottom_toTopOf="@+id/text_movie_genre_duration"
                app:layout_constraintLeft_toRightOf="@+id/text_movie_name"
                app:layout_constraintTop_toTopOf="@+id/text_movie_name"/>

            <TextView
                android:id="@+id/text_imdb_value"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toTopOf="@+id/text_rotten_tomatoes_label"
                app:layout_constraintLeft_toRightOf="@+id/text_imdb_label"
                app:layout_constraintTop_toTopOf="@+id/text_imdb_label"
                tools:text="7.1"/>

            <ImageView
                android:id="@+id/text_rotten_tomatoes_label"
                android:layout_width="62dp"
                android:layout_height="47dp"
                android:background="@drawable/ic_rotten_tomatoes"
                app:layout_constraintLeft_toLeftOf="@+id/text_imdb_label"
                app:layout_constraintRight_toRightOf="@+id/text_imdb_label"
                app:layout_constraintTop_toBottomOf="@+id/text_imdb_label"/>

            <TextView
                android:id="@+id/text_rotten_tomatoes_value"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/text_rotten_tomatoes_label"
                app:layout_constraintLeft_toRightOf="@+id/text_rotten_tomatoes_label"
                app:layout_constraintTop_toTopOf="@+id/text_rotten_tomatoes_label"
                tools:text="91%"/>

            <android.support.constraint.Guideline
                android:id="@+id/guideline_movie_detail_divisor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="101dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="448dp"/>

            <android.support.design.widget.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/guideline_movie_detail_divisor"
                app:tabGravity="fill"
                app:tabMode="fixed"/>

            <android.support.v4.view.ViewPager
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:id="@+id/pager_tab_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@+id/tab_layout"
                app:layout_constraintRight_toRightOf="@+id/tab_layout"
                app:layout_constraintTop_toBottomOf="@+id/tab_layout"
                />
        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>

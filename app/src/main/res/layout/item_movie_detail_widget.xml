<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingLeft="16dp"
              android:paddingRight="16dp">

    <TextView
        android:id="@+id/text_widget_movie_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_accent"
        android:textSize="25sp"
        tools:text="Harry Potter"/>

    <TextView
        android:id="@+id/text_movie_genre_duration"
        style="@style/Movie.Detail.Text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        tools:text="Comedy, Action | 91 min"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_imdb_label"
            style="@style/Movie.Detail.Text"
            android:text="@string/text_widget_imdb_label"/>

        <TextView
            android:id="@+id/text_imdb_value"
            style="@style/Movie.Detail.Text"
            tools:text="7.1"/>

        <TextView
            android:id="@+id/text_rotten_tomatoes_label"
            style="@style/Movie.Detail.Text"
            android:layout_marginLeft="16dp"
            android:text="@string/text_widget_rotten_tomatoes_label"/>

        <TextView
            android:id="@+id/text_rotten_tomatoes_value"
            style="@style/Movie.Detail.Text"
            tools:text="91%"/>
    </LinearLayout>

</LinearLayout>